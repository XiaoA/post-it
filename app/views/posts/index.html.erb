<p class ="lead"> 
  All Posts
</p>

<% @posts.each do |post|  %>
  <div class="row">
    <div class="span8 well">
      <% post.categories.each do |category| %>
	<span class ="badge"><%= category.name %></span>
      <% end %>
      <h4><%= link_to post.title, post.url %></h4>
      <p><%= post.description %></p>
      <p>
	<span class="quiet">Posted by:</span><%=post.creator.username %> <small>at <%= post.created_at %></small>
      </p>
    </div>
  </div>
<% end %>


